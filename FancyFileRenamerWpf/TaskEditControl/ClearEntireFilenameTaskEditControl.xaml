<Window x:Class="FancyFileRenamerWpf.TaskEditControl.ClearEntireFilenameTaskEditControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clear entire filename task edit" Height="137" Width="283" Icon="../Images/edit_task.png" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner">
  <Grid Margin="10,10,10,10">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="35"></RowDefinition>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="80"/>
    </Grid.ColumnDefinitions>
    <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
      <CheckBox Name="checkClearExtension" IsThreeState="False" Unchecked="checkChanged" Checked="checkChanged">Clear extension</CheckBox>
    </StackPanel>
    <Button IsDefault="True" Margin="5,5,0,5" Grid.Column="1" Grid.Row="1" Content="OK" Name="buttonOK" Click="buttonOK_Click" />
  </Grid>
</Window>
