<Window x:Class="FancyFileRenamerWpf.TaskEditControl.TaskEditWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				Title="TaskEditWindow" Height="480" Width="300">
		<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<ContentControl Margin="25" Padding="25" Name="Content" Grid.Row="0"></ContentControl>
		<StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="1">
			<Button Width="100" Padding="5" Margin="5" Name="btnOK" Click="btnOK_Click">OK</Button>
			<Button Width="100" Padding="5" Margin="5" Name="btnAbort" Click="btnAbort_Click">Abbrechen</Button>
		</StackPanel>
		</Grid>
</Window>
