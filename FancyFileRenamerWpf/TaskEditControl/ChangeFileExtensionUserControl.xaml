<UserControl x:Class="FancyFileRenamerWpf.TaskEditControl.ChangeFileExtensionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<StackPanel Orientation="Vertical">
			<RadioButton Name="radToLower" Height="32" VerticalContentAlignment="Center">
				<StackPanel Orientation="Horizontal">
					<Label>To Lower</Label>
				</StackPanel>
			</RadioButton>
			<RadioButton Name="radToUpper" Height="32" VerticalContentAlignment="Center">
				<StackPanel Orientation="Horizontal">
					<Label>To Upper</Label>
				</StackPanel>
			</RadioButton>
			<RadioButton Name="radToCustom" Height="32" VerticalContentAlignment="Center">
				<StackPanel Orientation="Horizontal">
					<Label>Custom:</Label>
					<TextBox Name="txtCustomExtension" Width="50"></TextBox>
				</StackPanel>
				</RadioButton>
		</StackPanel>
	</Grid>
</UserControl>
