<Window x:Class="FancyFileRenamerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Height="auto" Orientation="Horizontal">
      <TextBox Name="txtPath" MinWidth="400" MinHeight="21" Margin="5" />
      <Button Name="btnLoadPath" Width="Auto" Margin="5" >Load Path</Button>
    </StackPanel>
    <ListView Name="listSource" Grid.RowSpan="2" Grid.Column="0" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="5" />
    <GroupBox Grid.Row="1" Grid.Column="1" MinHeight="300" Header="Renaming Task" Padding="5" Margin="5"></GroupBox>
    <GroupBox Grid.Row="2" Grid.Column="1" MinHeight="300" Header="Sorting Task" Padding="5" Margin="5"></GroupBox>
    <ListView Name="listResult" Grid.RowSpan="2" Grid.Column="2" Grid.Row="1" Margin="5" ScrollViewer.VerticalScrollBarVisibility="Visible" />
  </Grid>
</Window>
