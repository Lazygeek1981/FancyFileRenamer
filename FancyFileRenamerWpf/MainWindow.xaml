<Window x:Class="FancyFileRenamerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FancyFileRenamerWpf.Converters"
        Title="MainWindow" Height="768" Width="1024">
  <Window.Resources>
    <converters:ListBoxItemToBoolConverter x:Key="listBoxItemToBoolConverter" />
    <converters:ComboBoxItemToBoolConverter x:Key="comboBoxItemToBoolConverter" />
    <converters:TaskToTaskIconConverter x:Key="taskToTaskIconConverter" />
  </Window.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Height="auto" Orientation="Horizontal">
      <TextBox Name="txtPath" MinWidth="400" MinHeight="21" Margin="5" />
      <Button Name="buttonLoadPath" Click="buttonLoadPath_Click" Width="Auto" Margin="5" >Load Path</Button>
      <Button Name="buttonStartRenaming" Click="buttonStartRenaming_Click" Width="Auto" Margin="300,5">Start Renaming</Button>
    </StackPanel>
    <GroupBox Header="Source Files" Grid.RowSpan="2" Grid.Column="0" Grid.Row="1" Margin="5">
      <ListView Name="listSource"  ScrollViewer.VerticalScrollBarVisibility="Visible"  />
    </GroupBox>
    <GroupBox Grid.Row="1" Grid.Column="1" MinHeight="300" Header="Renaming Task" Padding="5" Margin="5">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"></ColumnDefinition>
          <ColumnDefinition Width="32"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ComboBox Grid.Column="0" Grid.Row="0" ItemsSource="{Binding AllAvailableTasks}" Name="comboTasks">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
              <Image Height="32" Width="32" Source="{Binding Converter={StaticResource taskToTaskIconConverter}}" />
              <Label MinHeight="32" Content="{Binding NameInTaskSelectionList}" />
              </StackPanel>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
        <ListBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="5" Name="renamingTasks" SelectionChanged="renamingTasks_SelectionChanged" ItemsSource="{Binding CurrentTasks}">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
                <Image Source="{Binding Converter={StaticResource taskToTaskIconConverter}}" Width="32" Height="32" />
                <Label Content="{Binding Description}" />
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Column="1" Grid.Row="0" Name="buttonRenamingTaskAdd" IsEnabled="{Binding ElementName=comboTasks, Path=SelectedItem, Converter={StaticResource comboBoxItemToBoolConverter}}" Click="buttonRenamingTaskAdd_Click">+</Button>
        <Button Grid.Column="1" Grid.Row="2" Name="buttonRenamingTaskUp">/\</Button>

        <Button Grid.Column="1" Grid.Row="3" Name="buttonRenamingTaskRemove" IsEnabled="{Binding ElementName=renamingTasks, Path=SelectedItem, Converter={StaticResource listBoxItemToBoolConverter}}">-</Button>
        <Button Grid.Column="1" Grid.Row="4" Name="buttonRenamingTaskDown">\/</Button>
      </Grid>
    </GroupBox>
    <GroupBox Grid.Row="2" Grid.Column="1" MinHeight="300" Header="Sorting Task" Padding="5" Margin="5">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"></ColumnDefinition>
          <ColumnDefinition Width="32"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="32"></RowDefinition>
          <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="5"></ListBox>
        <Button Grid.Column="1" Grid.Row="0" Name="buttonSortingTaskUp">/\</Button>
        <Button Grid.Column="1" Grid.Row="1" Name="buttonSortingTaskAdd">+</Button>
        <Button Grid.Column="1" Grid.Row="2" Name="buttonSortingTaskRemove">-</Button>
        <Button Grid.Column="1" Grid.Row="3" Name="buttonSortingTaskDown">\/</Button>
      </Grid>
    </GroupBox>
    <GroupBox Grid.RowSpan="2" Grid.Column="2" Grid.Row="1" Margin="5" Header="Destination Files">
    <ListView Name="listResult" ScrollViewer.VerticalScrollBarVisibility="Visible" />
    </GroupBox>
  </Grid>
</Window>
